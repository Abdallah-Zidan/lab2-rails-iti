<p>
    <strong>Title:</strong>
    <%= @article.title %>
</p>
<p>
    <strong>Text:</strong>
    <%= @article.text %>
</p>

<h2>Comments</h2>
<%= render @article.comments %>
<%if user_signed_in?%>
<h2>Add a comment:</h2>
<%= render  "comments/form" %>
<%end%>

<%= link_to "go back" , articles_path %>
<%if can? :manage, @article%>
<%= link_to "Edit" , edit_article_path(@article) %>
<%end%>